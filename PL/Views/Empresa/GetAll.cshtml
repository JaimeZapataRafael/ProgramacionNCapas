@model ML.Empresa
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Empresa</h2>
<div class="row">
    <div class="col-md-12">
        <h5>Seleccione una Empresa para editarlo o + para agregar...</h5>
        <hr />
    </div>
</div>

@*<div class="row">*@
<div style="float:right;">
    @Html.ActionLink("+", "Form", "Empresa", htmlAttributes: new { @class = "btn btn-success" })

</div>

<br>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Editar</td>
            <td>Nombre</td>
            <td>Telefono</td>
            <td>Email</td>
            <td>DireccionWeb</td>
            <td>Logo</td>
            <td>Eliminar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (ML.Empresa empresa in Model.Empresas)
        {
            <tr>
                <td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Form", "Empresa", new { IdEmpresa = empresa.IdEmpresa })"></a></td>
                <td>@empresa.Nombre</td>
                <td>@empresa.Telefono</td>
                <td>@empresa.Email</td>
                <td>@empresa.DireccionWeb</td>
                <td>@empresa.Logo</td>
                <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Empresa", new { IdEmpresa = empresa.IdEmpresa})" onclick="return confirm('Estas seguro que deseas eliminar esta empresa?');"></a></td>

            </tr>
        }

    </tbody>
</table>